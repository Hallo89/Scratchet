{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "esnext", "dom", "dom.iterable" ],
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "*": [
        "./src/*",
        "./static/script/*.mjs" 
      ]
    }
  },
  "include": [
    "./*",
    "./src/*"
  ]
}
